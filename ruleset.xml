<?xml version="1.0"?>
<ruleset name="Custom">
    <description>Magento MEQP2 and PSR-2 standards</description>

    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2"/>
    <!-- need to add this config to make MEQP2 work -->
    <config name="installed_paths" value="../../../vendor/magento/marketplace-eqp/"/>
    <!-- Magento MEQP2 coding standards -->
    <rule ref="MEQP2"/>
</ruleset>